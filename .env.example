# MD2DB Docker Environment Configuration
# Copy this file to .env and customize as needed

# ================================
# Application Settings
# ================================
# Port for the MD2DB API server
PORT=8080

# Host to bind to
HOST=0.0.0.0

# Rust log level (trace, debug, info, warn, error)
RUST_LOG=info

# ================================
# Database Configuration
# ================================

# PostgreSQL (Primary Database)
POSTGRES_ENABLED=true
POSTGRES_DB=md2db
POSTGRES_USER=md2db
POSTGRES_PASSWORD=md2db_password
POSTGRES_PORT=5432

# Full PostgreSQL connection string (auto-generated if not set)
# DATABASE_URL=postgresql://md2db:md2db_password@postgres:5432/md2db

# MongoDB (Optional, for large file processing)
MONGODB_ENABLED=false
MONGO_DB=md2db
MONGO_USER=md2db
MONGO_PASSWORD=md2db_password
MONGO_PORT=27017

# Full MongoDB connection string (auto-generated if not set)
# MONGODB_URI=mongodb://mongodb:27017/md2db

# ================================
# Admin Tools (Optional)
# ================================
# Enable/disable admin tools (pgAdmin, Mongo Express)
ADMIN_TOOLS_ENABLED=false

# pgAdmin Settings
PGADMIN_EMAIL=admin@md2db.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Mongo Express Settings
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=admin
MONGO_EXPRESS_PORT=8081

# ================================
# Performance Settings
# ================================
# Number of parallel workers for processing
WORKERS=4

# Maximum file size for upload (in bytes)
MAX_FILE_SIZE=104857600

# ================================
# Security
# ================================
# Enable CORS
CORS_ENABLED=true

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
